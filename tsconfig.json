{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "types": ["node"],
  },
  "include": ["src/**/*.ts"],
}
